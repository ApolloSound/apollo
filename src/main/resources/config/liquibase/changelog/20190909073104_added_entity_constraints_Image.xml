<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Image.
    -->
    <changeSet id="20190909073104-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="track_id"
                                 baseTableName="image"
                                 constraintName="fk_image_track_id"
                                 referencedColumnNames="id"
                                 referencedTableName="track"/>

        <addForeignKeyConstraint baseColumnNames="playlist_id"
                                 baseTableName="image"
                                 constraintName="fk_image_playlist_id"
                                 referencedColumnNames="id"
                                 referencedTableName="playlist"/>

        <addForeignKeyConstraint baseColumnNames="artist_id"
                                 baseTableName="image"
                                 constraintName="fk_image_artist_id"
                                 referencedColumnNames="id"
                                 referencedTableName="artist"/>

        <addForeignKeyConstraint baseColumnNames="album_id"
                                 baseTableName="image"
                                 constraintName="fk_image_album_id"
                                 referencedColumnNames="id"
                                 referencedTableName="album"/>

    </changeSet>

</databaseChangeLog>
